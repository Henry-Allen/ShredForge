<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.canvas.*?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" 
            fx:controller="com.shredforge.PracticeController"
            style="-fx-background-color: linear-gradient(to bottom, #0a0a0a, #1a1a2e);">
    
    <top>
        <HBox alignment="CENTER_LEFT" spacing="15" style="-fx-background-color: linear-gradient(to right, #0f3460, #16213e); -fx-padding: 20;">
            <Label text="ðŸŽ¯ Practice Session" style="-fx-text-fill: #00ff88; -fx-font-size: 28px; -fx-font-weight: bold;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <VBox alignment="CENTER" spacing="5" style="-fx-background-color: rgba(0, 255, 136, 0.2); -fx-padding: 10 20; -fx-background-radius: 10;">
                <Label text="Session Time" style="-fx-text-fill: #888; -fx-font-size: 12px;"/>
                <Label fx:id="timerLabel" text="00:00" style="-fx-text-fill: #00ff88; -fx-font-size: 32px; -fx-font-weight: bold; -fx-font-family: 'Courier New';"/>
            </VBox>
            <Button fx:id="backToMainButton" text="âœ• Exit" onAction="#handleBackToMain"
                    style="-fx-background-color: #e94560; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 12 25; -fx-background-radius: 8; -fx-font-weight: bold;"/>
        </HBox>
    </top>
    
    <center>
        <VBox spacing="25" style="-fx-padding: 30;">
            
            <!-- Exercise Info Card -->
            <VBox spacing="15" style="-fx-background-color: linear-gradient(to right, rgba(0, 217, 255, 0.15), rgba(233, 69, 96, 0.15)); -fx-padding: 30; -fx-background-radius: 15;">
                <HBox alignment="CENTER_LEFT" spacing="20">
                    <VBox spacing="8" HBox.hgrow="ALWAYS">
                        <Label text="Current Exercise" style="-fx-text-fill: #00d9ff; -fx-font-size: 14px; -fx-font-weight: bold; -fx-letter-spacing: 1;"/>
                        <Label fx:id="exerciseLabel" text="Select an exercise to begin" 
                               style="-fx-text-fill: white; -fx-font-size: 26px; -fx-font-weight: bold;"/>
                    </VBox>
                    <VBox alignment="CENTER" spacing="5" style="-fx-background-color: rgba(0, 217, 255, 0.2); -fx-padding: 15; -fx-background-radius: 10;">
                        <Label text="Progress" style="-fx-text-fill: #888; -fx-font-size: 12px;"/>
                        <Label text="1 / 5" style="-fx-text-fill: #00d9ff; -fx-font-size: 24px; -fx-font-weight: bold;"/>
                    </VBox>
                </HBox>
                <ProgressBar fx:id="sessionProgress" progress="0" prefHeight="8"
                            style="-fx-accent: linear-gradient(to right, #00ff88, #00d9ff); -fx-background-radius: 5;"/>
            </VBox>
            
            <!-- Main Content Grid -->
            <HBox spacing="25" VBox.vgrow="ALWAYS">
                
                <!-- Left: Instructions -->
                <VBox spacing="20" style="-fx-background-color: rgba(15, 52, 96, 0.3); -fx-padding: 30; -fx-background-radius: 15;" HBox.hgrow="ALWAYS" prefWidth="450">
                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <Label text="ðŸ“" style="-fx-font-size: 24px;"/>
                        <Label text="Instructions" style="-fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold;"/>
                    </HBox>
                    <Separator style="-fx-background-color: rgba(255,255,255,0.1);"/>
                    <TextArea fx:id="instructionsArea" editable="false" wrapText="true" VBox.vgrow="ALWAYS"
                             style="-fx-control-inner-background: transparent; -fx-text-fill: #ddd; -fx-font-size: 15px; -fx-background-color: transparent; -fx-border-color: transparent; -fx-focus-color: transparent; -fx-faint-focus-color: transparent;"/>
                    
                    <!-- Tips Section -->
                    <VBox spacing="10" style="-fx-background-color: rgba(0, 217, 255, 0.1); -fx-padding: 15; -fx-background-radius: 8;">
                        <Label text="ðŸ’¡ Pro Tip" style="-fx-text-fill: #00d9ff; -fx-font-size: 14px; -fx-font-weight: bold;"/>
                        <Label text="Start slow and focus on accuracy. Speed will come naturally with practice." 
                               style="-fx-text-fill: white; -fx-font-size: 13px;" wrapText="true"/>
                    </VBox>
                </VBox>
                
                <!-- Right: Metronome & Controls -->
                <VBox spacing="20" style="-fx-background-color: rgba(15, 52, 96, 0.3); -fx-padding: 30; -fx-background-radius: 15;" HBox.hgrow="ALWAYS" prefWidth="400">
                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <Label text="ðŸŽµ" style="-fx-font-size: 24px;"/>
                        <Label text="Metronome" style="-fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold;"/>
                    </HBox>
                    <Separator style="-fx-background-color: rgba(255,255,255,0.1);"/>
                    
                    <!-- Metronome Visual -->
                    <VBox fx:id="metronomeVisual" alignment="CENTER" prefHeight="150" 
                          style="-fx-background-color: #0a0a0a; -fx-background-radius: 10; -fx-border-color: #00d9ff; -fx-border-width: 2; -fx-border-radius: 10;">
                        <Canvas width="300" height="150"/>
                    </VBox>
                    
                    <!-- Tempo Control -->
                    <VBox spacing="15" style="-fx-background-color: rgba(0, 0, 0, 0.3); -fx-padding: 20; -fx-background-radius: 10;">
                        <HBox alignment="CENTER" spacing="15">
                            <VBox alignment="CENTER" spacing="5">
                                <Label text="Tempo" style="-fx-text-fill: #888; -fx-font-size: 12px;"/>
                                <Label fx:id="tempoLabel" text="80 BPM" style="-fx-text-fill: #00ff88; -fx-font-size: 28px; -fx-font-weight: bold; -fx-font-family: 'Courier New';"/>
                            </VBox>
                        </HBox>
                        <HBox spacing="10" alignment="CENTER">
                            <Button text="-10" style="-fx-background-color: #e94560; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 8 15; -fx-background-radius: 5; -fx-font-weight: bold;"/>
                            <Slider fx:id="tempoSlider" min="40" max="200" value="80" 
                                   style="-fx-control-inner-background: #00d9ff;" prefWidth="200"/>
                            <Button text="+10" style="-fx-background-color: #00ff88; -fx-text-fill: #1a1a2e; -fx-font-size: 14px; -fx-padding: 8 15; -fx-background-radius: 5; -fx-font-weight: bold;"/>
                        </HBox>
                    </VBox>
                    
                    <!-- Control Buttons -->
                    <VBox spacing="15">
                        <HBox spacing="15" alignment="CENTER">
                            <Button fx:id="startButton" text="â–¶ Start" onAction="#handleStart"
                                    style="-fx-background-color: #00ff88; -fx-text-fill: #1a1a2e; -fx-font-size: 18px; -fx-padding: 15 35; -fx-background-radius: 10; -fx-font-weight: bold;"
                                    prefWidth="160"/>
                            <Button fx:id="pauseButton" text="â¸ Pause" onAction="#handlePause" disable="true"
                                    style="-fx-background-color: #ffaa00; -fx-text-fill: #1a1a2e; -fx-font-size: 18px; -fx-padding: 15 35; -fx-background-radius: 10; -fx-font-weight: bold;"
                                    prefWidth="160"/>
                        </HBox>
                        <Button fx:id="nextButton" text="Next Exercise â†’" onAction="#handleNext" disable="true"
                                style="-fx-background-color: #00d9ff; -fx-text-fill: white; -fx-font-size: 16px; -fx-padding: 12 25; -fx-background-radius: 10; -fx-font-weight: bold;"/>
                    </VBox>
                    
                </VBox>
            </HBox>
            
        </VBox>
    </center>
    
</BorderPane>
