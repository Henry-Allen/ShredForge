<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" 
            fx:controller="com.shredforge.PracticeController"
            style="-fx-background-color: linear-gradient(to bottom, #1a1a2e, #16213e);">
    
    <!-- Top Bar -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="15" style="-fx-background-color: #0f3460; -fx-padding: 15;">
            <Label text="ðŸŽ¯ Practice Session" style="-fx-text-fill: #e94560; -fx-font-size: 24px; -fx-font-weight: bold;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Label fx:id="timerLabel" text="00:00" style="-fx-text-fill: #00ff88; -fx-font-size: 28px; -fx-font-weight: bold;"/>
            <Button fx:id="backToMainButton" text="â† Back" onAction="#handleBackToMain"
                    style="-fx-background-color: #e94560; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10 20; -fx-background-radius: 5;"/>
        </HBox>
    </top>
    
    <!-- Main Content -->
    <center>
        <VBox spacing="20" style="-fx-padding: 20;">
            
            <!-- Current Exercise -->
            <VBox spacing="10" style="-fx-background-color: rgba(15, 52, 96, 0.5); -fx-padding: 20; -fx-background-radius: 10;">
                <Label text="Current Exercise" style="-fx-text-fill: #888; -fx-font-size: 14px;"/>
                <Label fx:id="exerciseLabel" text="Select an exercise to begin" 
                       style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold;"/>
                <ProgressBar fx:id="sessionProgress" progress="0" prefWidth="800" prefHeight="20"
                            style="-fx-accent: #00ff88;"/>
            </VBox>
            
            <!-- Instructions -->
            <VBox spacing="10" style="-fx-background-color: rgba(15, 52, 96, 0.5); -fx-padding: 20; -fx-background-radius: 10;" VBox.vgrow="ALWAYS">
                <Label text="Instructions" style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;"/>
                <TextArea fx:id="instructionsArea" editable="false" wrapText="true" prefHeight="200"
                         style="-fx-control-inner-background: #1a1a2e; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-color: #1a1a2e;"/>
            </VBox>
            
            <!-- Metronome Control -->
            <VBox spacing="10" style="-fx-background-color: rgba(15, 52, 96, 0.5); -fx-padding: 20; -fx-background-radius: 10;">
                <Label text="Metronome" style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;"/>
                <HBox spacing="15" alignment="CENTER_LEFT">
                    <Label text="Tempo:" style="-fx-text-fill: white; -fx-font-size: 14px;"/>
                    <Slider fx:id="tempoSlider" min="40" max="200" value="80" 
                           showTickLabels="true" showTickMarks="true" majorTickUnit="40"
                           style="-fx-control-inner-background: #00d9ff;" prefWidth="400"/>
                    <Label fx:id="tempoLabel" text="80 BPM" style="-fx-text-fill: #00d9ff; -fx-font-size: 16px; -fx-font-weight: bold;"/>
                </HBox>
                <VBox fx:id="metronomeVisual" alignment="CENTER" prefHeight="50" 
                      style="-fx-background-color: #1a1a2e; -fx-background-radius: 5;"/>
            </VBox>
            
            <!-- Control Buttons -->
            <HBox spacing="15" alignment="CENTER">
                <Button fx:id="startButton" text="â–¶ Start" onAction="#handleStart"
                        style="-fx-background-color: #00ff88; -fx-text-fill: #1a1a2e; -fx-font-size: 18px; -fx-padding: 15 40; -fx-background-radius: 10; -fx-font-weight: bold;"
                        prefWidth="150"/>
                <Button fx:id="pauseButton" text="â¸ Pause" onAction="#handlePause" disable="true"
                        style="-fx-background-color: #ffaa00; -fx-text-fill: #1a1a2e; -fx-font-size: 18px; -fx-padding: 15 40; -fx-background-radius: 10; -fx-font-weight: bold;"
                        prefWidth="150"/>
                <Button fx:id="nextButton" text="Next â†’" onAction="#handleNext" disable="true"
                        style="-fx-background-color: #00d9ff; -fx-text-fill: #1a1a2e; -fx-font-size: 18px; -fx-padding: 15 40; -fx-background-radius: 10; -fx-font-weight: bold;"
                        prefWidth="150"/>
            </HBox>
            
        </VBox>
    </center>
    
</BorderPane>
