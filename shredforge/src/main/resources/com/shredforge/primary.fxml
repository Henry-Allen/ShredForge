<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.web.WebView?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.shredforge.PrimaryController">
    <top>
        <HBox spacing="16" alignment="CENTER_LEFT" styleClass="topbar">
            <padding>
                <Insets top="10" right="16" bottom="10" left="16"/>
            </padding>
            <children>
                <Label text="ShredForge" styleClass="app-title" />
                <Pane HBox.hgrow="ALWAYS" />
                <Button text="Search" onAction="#openSearchModal" />
                <Button text="My Tabs" onAction="#listSavedTabs" />
                <Button text="Refresh" onAction="#refreshStatus" />
                <Label fx:id="repositoryStatusLabel" text="Loading..." />
            </children>
        </HBox>
    </top>
    
    <center>
        <StackPane>
            <padding>
                <Insets top="10.0" right="10.0" bottom="10.0" left="10.0"/>
            </padding>
            <children>
                <WebView fx:id="tabPreview" prefHeight="600" prefWidth="720" />
                <Pane fx:id="playbackOverlay" mouseTransparent="true">
                    <children>
                        <Rectangle fx:id="playbackIndicator" width="3" height="200" />
                    </children>
                </Pane>
                <StackPane fx:id="modalOverlay" visible="false" pickOnBounds="true" styleClass="modal-overlay">
                    <padding>
                        <Insets top="40" right="40" bottom="40" left="40"/>
                    </padding>
                    <children>
                        <VBox spacing="12" styleClass="modal-card" maxWidth="720" prefWidth="720">
                            <children>
                                <HBox alignment="CENTER_LEFT" spacing="8">
                                    <children>
                                        <Label text="Search tabs" styleClass="modal-title" />
                                        <Pane HBox.hgrow="ALWAYS" />
                                        <Button text="Close" onAction="#closeModal" />
                                    </children>
                                </HBox>
                                <TextField fx:id="searchField" promptText="Search Song or Artist" />
                                <HBox spacing="8" alignment="CENTER_LEFT">
                                    <children>
                                        <Button fx:id="searchOnlineButton" text="Search Online" onAction="#onSearchOnline" />
                                        <Button fx:id="searchSavedButton" text="Search Saved" onAction="#onSearchSaved" />
                                    </children>
                                </HBox>
                                <Label fx:id="searchStatusLabel" text="Ready." wrapText="true" />
                                <ListView fx:id="resultsList" prefHeight="420" VBox.vgrow="ALWAYS" />
                            </children>
                        </VBox>
                    </children>
                </StackPane>
            </children>
        </StackPane>
    </center>
    <bottom>
        <VBox spacing="10">
            <padding>
                <Insets top="15.0" right="15.0" bottom="15.0" left="15.0"/>
            </padding>
            <children>
                <HBox spacing="12" alignment="CENTER_LEFT">
                    <children>
                        <Button fx:id="playPauseButton" text="Play" onAction="#onPlayPause" />
                        <Button text="Restart" onAction="#onRestartPlayback" />
                        <Slider fx:id="tempoSlider" prefWidth="200" />
                        <Label fx:id="tempoLabel" text="Tempo 1.0x" />
                        <ProgressBar fx:id="playbackProgressBar" prefWidth="260" HBox.hgrow="ALWAYS" />
                    </children>
                </HBox>
                <HBox spacing="12" alignment="CENTER_LEFT">
                    <children>
                        <Label fx:id="scoreStatsLabel" text="Accuracy: -- | Hits: 0/0" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </bottom>
</BorderPane>
