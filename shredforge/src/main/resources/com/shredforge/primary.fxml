<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.web.WebView?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.shredforge.PrimaryController">
    <top>
        <VBox spacing="8">
            <padding>
                <Insets top="15" right="15" bottom="15" left="15"/>
            </padding>
            <children>
                <Label text="Shredforge Repository Tester" style="-fx-font-size: 20px;" />
                <Label fx:id="repositoryStatusLabel" text="Loading repository state..." wrapText="true" />
                <HBox spacing="8">
                    <children>
                        <TextField fx:id="searchField" promptText="Search Song or Artist" HBox.hgrow="ALWAYS" />
                        <Button fx:id="searchOnlineButton" text="Search Online" onAction="#onSearchOnline" />
                        <Button fx:id="searchSavedButton" text="Search Saved" onAction="#onSearchSaved" />
                        <Button text="Saved Library" onAction="#listSavedTabs" />
                        <Button text="Calibration" onAction="#onOpenCalibration" />
                        <Button text="Refresh Services" onAction="#refreshStatus" />
                    </children>
                </HBox>
                <Label fx:id="searchStatusLabel" text="Ready." wrapText="true" />
            </children>
        </VBox>
    </top>
    <left>
        <VBox spacing="8">
            <padding>
                <Insets top="15.0" right="15.0" bottom="15.0" left="15.0"/>
            </padding>
            <children>
                <Label text="Results" style="-fx-font-weight: bold;" />
                <ListView fx:id="resultsList" prefWidth="280" VBox.vgrow="ALWAYS" />
            </children>
        </VBox>
    </left>
    <center>
        <StackPane>
            <padding>
                <Insets top="10.0" right="10.0" bottom="10.0" left="10.0"/>
            </padding>
            <children>
                <WebView fx:id="tabPreview" prefHeight="600" prefWidth="720" />
                <Pane fx:id="playbackOverlay" mouseTransparent="true">
                    <children>
                        <Rectangle fx:id="playbackIndicator" width="3" height="200" />
                    </children>
                </Pane>
            </children>
        </StackPane>
    </center>
    <bottom>
        <VBox spacing="10">
            <padding>
                <Insets top="15.0" right="15.0" bottom="15.0" left="15.0"/>
            </padding>
            <children>
                <HBox spacing="12" alignment="CENTER_LEFT">
                    <children>
                        <Button fx:id="playPauseButton" text="Play" onAction="#onPlayPause" />
                        <Button text="Restart" onAction="#onRestartPlayback" />
                        <Slider fx:id="tempoSlider" prefWidth="200" />
                        <Label fx:id="tempoLabel" text="Tempo 1.0x" />
                        <ProgressBar fx:id="playbackProgressBar" prefWidth="260" HBox.hgrow="ALWAYS" />
                    </children>
                </HBox>
                <HBox spacing="12" alignment="CENTER_LEFT">
                    <children>
                        <Label fx:id="scoreStatsLabel" text="Accuracy: -- | Hits: 0/0" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </bottom>
</BorderPane>
