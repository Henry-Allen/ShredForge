<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.canvas.Canvas?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" 
            fx:controller="com.shredforge.PrimaryController" 
            style="-fx-background-color: linear-gradient(to bottom, #0a0a0a, #1a1a2e);">
    
    <top>
        <VBox spacing="0">
            <HBox alignment="CENTER_LEFT" spacing="15" style="-fx-background-color: linear-gradient(to right, #0f3460, #16213e); -fx-padding: 20;">
                <Label text="ðŸŽ¸ Tab Player" style="-fx-text-fill: #e94560; -fx-font-size: 28px; -fx-font-weight: bold;"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Button text="ðŸ  Dashboard" style="-fx-background-color: #00d9ff; -fx-text-fill: #1a1a2e; -fx-font-size: 14px; -fx-padding: 10 20; -fx-background-radius: 8; -fx-font-weight: bold;"/>
                <Button fx:id="calibrateBtn" text="ðŸŽšï¸ Calibrate" onAction="#handleCalibrate" 
                        style="-fx-background-color: #e94560; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10 20; -fx-background-radius: 8; -fx-font-weight: bold;"/>
            </HBox>
            
            <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-background-color: rgba(0, 0, 0, 0.3); -fx-padding: 15;">
                <VBox spacing="3">
                    <Label text="Status" style="-fx-text-fill: #888; -fx-font-size: 11px;"/>
                    <Label fx:id="statusLabel" text="Ready to rock! ðŸ¤˜" 
                           style="-fx-text-fill: #00d9ff; -fx-font-size: 14px; -fx-font-weight: bold;"/>
                </VBox>
                <Separator orientation="VERTICAL"/>
                <VBox spacing="3">
                    <Label text="Calibration" style="-fx-text-fill: #888; -fx-font-size: 11px;"/>
                    <Label fx:id="calibrationStatus" text="Not Calibrated" 
                           style="-fx-text-fill: #ff6b6b; -fx-font-weight: bold; -fx-font-size: 13px;"/>
                </VBox>
                <Separator orientation="VERTICAL"/>
                <VBox spacing="3">
                    <Label text="Current Tab" style="-fx-text-fill: #888; -fx-font-size: 11px;"/>
                    <Label fx:id="currentTabLabel" text="None" 
                           style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 13px;"/>
                </VBox>
            </HBox>
        </VBox>
    </top>
    
    <center>
        <VBox spacing="25" style="-fx-padding: 25;">
            
            <!-- Search Bar -->
            <VBox spacing="15" style="-fx-background-color: rgba(15, 52, 96, 0.3); -fx-padding: 25; -fx-background-radius: 15;">
                <Label text="ðŸ” Find Your Next Song" style="-fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold;"/>
                <HBox spacing="15" alignment="CENTER_LEFT">
                    <TextField fx:id="searchField" promptText="Search for tabs (e.g., 'Smoke on the Water')..." 
                              style="-fx-background-color: rgba(0, 0, 0, 0.5); -fx-text-fill: white; -fx-prompt-text-fill: #666; -fx-font-size: 15px; -fx-padding: 12; -fx-border-color: #00d9ff; -fx-border-width: 2; -fx-border-radius: 8; -fx-background-radius: 8;"
                              HBox.hgrow="ALWAYS"/>
                    <Button text="ðŸ” Search" onAction="#handleSearch"
                            style="-fx-background-color: linear-gradient(to right, #00d9ff, #00ff88); -fx-text-fill: #1a1a2e; -fx-font-size: 15px; -fx-padding: 12 30; -fx-background-radius: 8; -fx-font-weight: bold;"
                            prefWidth="140"/>
                </HBox>
            </VBox>
            
            <!-- Main Content -->
            <HBox spacing="25" VBox.vgrow="ALWAYS">
                
                <!-- Tab Library -->
                <VBox spacing="15" style="-fx-background-color: rgba(15, 52, 96, 0.3); -fx-padding: 25; -fx-background-radius: 15;" prefWidth="380">
                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <Label text="ðŸ“‹ Tab Library" style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;"/>
                        <Region HBox.hgrow="ALWAYS"/>
                        <Label text="5 songs" style="-fx-text-fill: #888; -fx-font-size: 12px;"/>
                    </HBox>
                    <Separator style="-fx-background-color: rgba(255,255,255,0.1);"/>
                    <ListView fx:id="tabListView" VBox.vgrow="ALWAYS"
                             style="-fx-background-color: transparent; -fx-control-inner-background: transparent; -fx-border-color: transparent; -fx-focus-color: transparent;"/>
                </VBox>
                
                <!-- Tab Display & Controls -->
                <VBox spacing="20" style="-fx-background-color: rgba(15, 52, 96, 0.3); -fx-padding: 25; -fx-background-radius: 15;" HBox.hgrow="ALWAYS">
                    
                    <!-- Tab Canvas -->
                    <VBox spacing="15">
                        <Label text="ðŸŽµ Tab Display" style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;"/>
                        <Canvas fx:id="tabCanvas" width="700" height="350" 
                               style="-fx-effect: dropshadow(gaussian, rgba(0, 217, 255, 0.3), 15, 0, 0, 0);"/>
                    </VBox>
                    
                    <!-- Playback Controls -->
                    <VBox spacing="20" style="-fx-background-color: rgba(0, 0, 0, 0.4); -fx-padding: 25; -fx-background-radius: 12;">
                        <HBox spacing="15" alignment="CENTER">
                            <Button fx:id="startBtn" text="â–¶ï¸ Start" onAction="#handleStart"
                                    style="-fx-background-color: #00ff88; -fx-text-fill: #1a1a2e; -fx-font-size: 16px; -fx-padding: 15 35; -fx-background-radius: 10; -fx-font-weight: bold;"
                                    prefWidth="160"/>
                            <Button fx:id="pauseBtn" text="â¸ï¸ Pause" onAction="#handlePause" disable="true"
                                    style="-fx-background-color: #ffaa00; -fx-text-fill: #1a1a2e; -fx-font-size: 16px; -fx-padding: 15 35; -fx-background-radius: 10; -fx-font-weight: bold;"
                                    prefWidth="160"/>
                            <Region HBox.hgrow="ALWAYS"/>
                            <VBox spacing="8" alignment="CENTER">
                                <Label text="Speed" style="-fx-text-fill: #888; -fx-font-size: 12px;"/>
                                <Label fx:id="speedLabel" text="1.0x" style="-fx-text-fill: #00d9ff; -fx-font-size: 18px; -fx-font-weight: bold;"/>
                            </VBox>
                            <Slider fx:id="speedSlider" min="0.25" max="2.0" value="1.0" 
                                   showTickLabels="false" showTickMarks="false"
                                   style="-fx-control-inner-background: #00d9ff;" prefWidth="180"/>
                        </HBox>
                    </VBox>
                    
                    <!-- Performance Stats -->
                    <HBox spacing="20" alignment="CENTER" style="-fx-background-color: rgba(0, 217, 255, 0.08); -fx-padding: 20; -fx-background-radius: 10;">
                        <VBox alignment="CENTER" spacing="8" HBox.hgrow="ALWAYS" style="-fx-background-color: rgba(0, 255, 136, 0.15); -fx-padding: 15; -fx-background-radius: 8;">
                            <Label text="Accuracy" style="-fx-text-fill: #888; -fx-font-size: 12px;"/>
                            <Label fx:id="accuracyLabel" text="0.0%" style="-fx-text-fill: #00ff88; -fx-font-size: 28px; -fx-font-weight: bold;"/>
                        </VBox>
                        <VBox alignment="CENTER" spacing="8" HBox.hgrow="ALWAYS" style="-fx-background-color: rgba(0, 217, 255, 0.15); -fx-padding: 15; -fx-background-radius: 8;">
                            <Label text="Notes Hit" style="-fx-text-fill: #888; -fx-font-size: 12px;"/>
                            <Label fx:id="notesLabel" text="0 / 0" style="-fx-text-fill: #00d9ff; -fx-font-size: 20px; -fx-font-weight: bold;"/>
                        </VBox>
                        <VBox alignment="CENTER" spacing="8" HBox.hgrow="ALWAYS" style="-fx-background-color: rgba(255, 170, 0, 0.15); -fx-padding: 15; -fx-background-radius: 8;">
                            <Label text="Grade" style="-fx-text-fill: #888; -fx-font-size: 12px;"/>
                            <Label fx:id="gradeLabel" text="-" style="-fx-text-fill: #ffaa00; -fx-font-size: 28px; -fx-font-weight: bold;"/>
                        </VBox>
                        <VBox alignment="CENTER" spacing="8" HBox.hgrow="ALWAYS" style="-fx-background-color: rgba(233, 69, 96, 0.15); -fx-padding: 15; -fx-background-radius: 8;">
                            <Label text="Progress" style="-fx-text-fill: #888; -fx-font-size: 12px;"/>
                            <ProgressBar fx:id="progressBar" progress="0" prefWidth="120" prefHeight="12"
                                       style="-fx-accent: linear-gradient(to right, #e94560, #ff6b6b); -fx-background-radius: 6;"/>
                        </VBox>
                    </HBox>
                    
                </VBox>
            </HBox>
            
        </VBox>
    </center>
    
</BorderPane>
