<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="mainContainer" alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.shredforge.ui.MainMenuController">
    <padding>
        <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
    </padding>

    <!-- Title -->
    <Label fx:id="titleLabel" text="ShredForge" textAlignment="CENTER">
        <font>
            <Font name="System Bold" size="48.0" />
        </font>
    </Label>

    <Label text="Guitar Practice &amp; Training" textAlignment="CENTER">
        <font>
            <Font size="18.0" />
        </font>
    </Label>

    <!-- Spacer -->
    <VBox minHeight="30.0" />

    <!-- Main Menu Buttons -->
    <VBox alignment="CENTER" spacing="15.0" maxWidth="400.0">
        <Button fx:id="searchTabsButton" text="Search Tabs" maxWidth="Infinity" minHeight="50.0" onAction="#handleSearchTabs">
            <font>
                <Font size="16.0" />
            </font>
        </Button>

        <Button fx:id="myTabsButton" text="My Tabs" maxWidth="Infinity" minHeight="50.0" onAction="#handleMyTabs">
            <font>
                <Font size="16.0" />
            </font>
        </Button>

        <Button fx:id="calibrateButton" text="Calibrate Input" maxWidth="Infinity" minHeight="50.0" onAction="#handleCalibrate">
            <font>
                <Font size="16.0" />
            </font>
        </Button>

        <Button fx:id="settingsButton" text="Settings" maxWidth="Infinity" minHeight="50.0" onAction="#handleSettings">
            <font>
                <Font size="16.0" />
            </font>
        </Button>

        <Button fx:id="exitButton" text="Exit" maxWidth="Infinity" minHeight="40.0" onAction="#handleExit">
            <font>
                <Font size="14.0" />
            </font>
        </Button>
    </VBox>

    <!-- Spacer -->
    <VBox minHeight="30.0" />

    <!-- Status Indicators -->
    <VBox alignment="CENTER" spacing="10.0">
        <HBox alignment="CENTER" spacing="30.0">
            <Label fx:id="tabCountLabel" text="Saved Tabs: 0">
                <font>
                    <Font size="14.0" />
                </font>
            </Label>

            <Label fx:id="calibrationStatusLabel" text="Calibration: âš  Required">
                <font>
                    <Font size="14.0" />
                </font>
            </Label>
        </HBox>

        <Label fx:id="statusLabel" text="Ready" textAlignment="CENTER">
            <font>
                <Font size="12.0" />
            </font>
        </Label>
    </VBox>
</VBox>
