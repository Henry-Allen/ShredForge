<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.Tooltip?>

<VBox alignment="TOP_CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.shredforge.ui.SettingsController">
    <padding>
        <Insets bottom="30.0" left="40.0" right="40.0" top="30.0" />
    </padding>

    <!-- Title -->
    <Label text="Settings" textAlignment="CENTER">
        <font>
            <Font name="System Bold" size="32.0" />
        </font>
    </Label>

    <!-- Settings Sections -->
    <VBox spacing="25.0" maxWidth="700.0" VBox.vgrow="ALWAYS">

        <!-- Audio Settings -->
        <VBox spacing="15.0" style="-fx-background-color: #f5f5f5; -fx-padding: 20; -fx-background-radius: 10;">
            <Label text="Audio Settings" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

            <!-- Current Device Display -->
            <Label fx:id="currentDeviceLabel" text="Current: Default System Device" style="-fx-font-style: italic;" />

            <!-- Audio Device Selection -->
            <HBox alignment="CENTER_LEFT" spacing="15.0">
                <Label text="Audio Input Device:" minWidth="150.0" />
                <ChoiceBox fx:id="audioDeviceChoice" minWidth="300.0" />
            </HBox>

            <!-- Volume Control -->
            <VBox spacing="5.0">
                <HBox alignment="CENTER_LEFT" spacing="15.0">
                    <Label text="Input Volume:" minWidth="150.0" />
                    <Label fx:id="volumeLabel" text="80%" style="-fx-font-weight: bold;" minWidth="50.0" />
                </HBox>
                <Slider fx:id="volumeSlider" min="0.0" max="100.0" value="80.0" showTickLabels="true" showTickMarks="true" majorTickUnit="25.0" />
            </VBox>

            <!-- Audio Test -->
            <HBox alignment="CENTER_LEFT" spacing="15.0">
                <Button fx:id="testAudioButton" text="Test Audio Input" onAction="#handleTestAudio" minWidth="150.0">
                    <tooltip>
                        <Tooltip text="Test your audio input to verify it's working correctly" />
                    </tooltip>
                </Button>
                <ProgressBar fx:id="audioLevelMeter" progress="0.0" prefWidth="200.0" />
            </HBox>
        </VBox>

        <!-- Detection Settings -->
        <VBox spacing="15.0" style="-fx-background-color: #f5f5f5; -fx-padding: 20; -fx-background-radius: 10;">
            <Label text="Note Detection" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

            <!-- Detection Sensitivity -->
            <VBox spacing="5.0">
                <HBox alignment="CENTER_LEFT" spacing="15.0">
                    <Label text="Detection Sensitivity:" minWidth="150.0" />
                    <Label fx:id="sensitivityLabel" text="0.60 (Medium)" style="-fx-font-weight: bold;" minWidth="120.0" />
                </HBox>
                <Slider fx:id="detectionSensitivitySlider" min="0.3" max="0.9" value="0.6" showTickLabels="true" showTickMarks="true" majorTickUnit="0.2" />
                <Label text="Lower = More lenient | Higher = More strict" style="-fx-font-size: 10px; -fx-font-style: italic;" />
            </VBox>
        </VBox>

        <!-- Display Settings -->
        <VBox spacing="15.0" style="-fx-background-color: #f5f5f5; -fx-padding: 20; -fx-background-radius: 10;">
            <Label text="Display Preferences" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

            <CheckBox fx:id="autoScrollCheckbox" text="Auto-scroll tablature during playback" selected="true" />
            <CheckBox fx:id="showTimingErrorsCheckbox" text="Show timing error feedback" selected="true" />

            <!-- Theme Selection -->
            <HBox alignment="CENTER_LEFT" spacing="15.0">
                <Label text="Theme:" minWidth="150.0" />
                <ChoiceBox fx:id="themeChoice" minWidth="150.0" />
            </HBox>
        </VBox>

    </VBox>

    <!-- Action Buttons -->
    <HBox alignment="CENTER" spacing="15.0">
        <Button fx:id="saveButton" text="Save Settings" onAction="#handleSave" minWidth="130.0" style="-fx-background-color: #4CAF50; -fx-text-fill: white;">
            <font>
                <Font size="14.0" />
            </font>
            <tooltip>
                <Tooltip text="Save all settings changes" />
            </tooltip>
        </Button>

        <Button fx:id="resetButton" text="Reset to Defaults" onAction="#handleReset" minWidth="150.0">
            <font>
                <Font size="14.0" />
            </font>
            <tooltip>
                <Tooltip text="Reset all settings to their default values" />
            </tooltip>
        </Button>

        <Button fx:id="backButton" text="Back to Menu" onAction="#handleBack" minWidth="120.0">
            <font>
                <Font size="14.0" />
            </font>
            <tooltip>
                <Tooltip text="Return to main menu" />
            </tooltip>
        </Button>
    </HBox>

    <!-- Status Label -->
    <Label fx:id="statusLabel" text="Configure your audio and display settings">
        <font>
            <Font size="12.0" />
        </font>
    </Label>

    <!-- Help Text -->
    <VBox alignment="CENTER" spacing="5.0" maxWidth="600.0" style="-fx-background-color: #fff3cd; -fx-padding: 15; -fx-background-radius: 5;">
        <Label text="ðŸ’¡ Audio Setup Tips" style="-fx-font-weight: bold;" />
        <Label text="â€¢ Connect your guitar before testing audio input" wrapText="true" textAlignment="CENTER" />
        <Label text="â€¢ If using USB interface, make sure it's selected in the dropdown" wrapText="true" textAlignment="CENTER" />
        <Label text="â€¢ Adjust detection sensitivity if notes aren't being detected accurately" wrapText="true" textAlignment="CENTER" />
    </VBox>
</VBox>
